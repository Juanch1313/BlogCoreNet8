@model BlogCore.Models.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="row mt-1">
    <div class="col-sm-12">
        <h1 class="text-center text-white bg-secondary py-1">Lastest Courses and Tutorials</h1>
    </div>
</div>

@if (Model.ArticlesList.Count() > 0)
{
    <hr />
    <div class="row">
        @foreach (var article in Model.ArticlesList.OrderBy(o => o.Id))
        {
            <div class="col-4">
                <div class="card">
                    <img src="@article.ImageUrl" class="img-thumbnail" width="100%"/>
                    <div class="card-body">
                        <h5 class="text-center">@article.Name</h5>
                        <a asp-action="Detail" class="btn btn-success" style="border-radius: 10px;" asp-route-id="@article.Id">
                            Read More
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>There is no articles</p>
}